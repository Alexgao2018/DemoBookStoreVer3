@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    <div style=" float:left;margin-top:20px;margin-left:20px;">
        <img src="~/Images/login_in.gif"/>
        <p style="font-size:12px;color:#808080;">欢迎光临第三波书店网站，本店为第三波旗下专业在线书店！</p>
        <p style="font-size:12px;color:#808080;">您可以使用第三波书店的用户名，直接登录。</p>
        <table>
            <tr><td>用户名:</td><td>@Html.TextBox("id")</td><td style="color:red;">@ViewBag.Msg</td></tr>
            <tr><td>密码:</td><td>@Html.Password("pwd")</td><td style="color:red;">@ViewBag.Msg1</td></tr>
            <tr><td></td><td style="color:#808080;"><input type="checkbox" />在此计算机保留我的用户名和密码</td></tr>
            <tr><td></td><td><input type="submit" value="登入" /></td>
            </tr>
        </table>
    </div>
}
<style>
    table tr td
    {
        font-size:12px;
        line-height:30px;
    }
</style>
